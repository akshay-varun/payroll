{% extends "dashboard.twig" %}
    {% block title %}Payroll:DeleteEmployee{% endblock %}
    {% block head %}
        {{ parent() }}
    {% endblock %}
     {% block body %}
     {{ parent() }}
         <div class="section">
             <div class="container">
                 <div class="row">
                     <form class="col s" method="post", action="/delete">
                         <div class="card">
                             <div class="card-content">
                                 <div class="row">
                                     <div class="input-field col s4">
                                         <input  name="id" type="text" class="validate" required>
                                         <label for="id">Employee ID</label>
                                     </div>
                                     <button class="btn waves-effect waves-light" type="submit" name="action">DELETE
                                         <i class="material-icons right">send</i>
                                     </button>
                                 </div>
                             </div>
                         </div>
                     </form>

                 </div>
             </div>
         </div>


     {% endblock %}
 {% block script %}
     {{ parent() }}
     <script>
         $(document).ready(function(){
             $('.sidenav').sidenav();
         });
     </script>
 {% endblock %}