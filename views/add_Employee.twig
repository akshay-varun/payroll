{% extends "dashboard.twig" %}
{% block title %}Payroll:Admin{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

<div class="section">
    <div class="container">
    <div class="row">
        <div class="col s12 m2"></div>
        <div class="col s12 m8 ">
        <form class="col s12" action="/add_Employee" method="post">
            <div class="card">
                <div class="card-content">
            <div class="row">
                <span class="card-title">EMPLOYEE</span>
                <div class="input-field col s8">
                    <input placeholder="Name" id="first_name" type="text" class="validate"  name="Emp_Name" required>
                </div>
            </div>


            <div class="row">
                <div class="input-field col s8">
                    <input id="email" type="email" class="validate" name="Emp_Email" required>
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="number" type="number" class="validate" name="Emp_Phone" required >
                    <label for="number">Phone Number</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="number" type="number" class="validate" name="Admin_ID" required>
                    <label for="number">ADMIN ID</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="number" type="number" class="validate" name="Salary" required>
                    <label for="number">Salary</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">ADD
                <i class="material-icons right">send</i>
            </button>
                </div>
            </div>
        </form>
        </div>
    </div>
    </div>
    </div>
</div>



{% endblock %}
{% block script %}
    {{ parent() }}
{% endblock %}